<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:layout_width="match_parent"
    android:layout_marginBottom="4dp"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android" >

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_marginRight="15dp"
            android:id="@+id/titulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="14dp"
            android:layout_marginStart="14dp"
            android:layout_marginTop="11dp"
            android:layout_toLeftOf="@+id/tempo"
            android:layout_toStartOf="@+id/tempo"
            android:text="3 produtos direfentes"
            android:textColor="@color/cardview_dark_background"
            android:textSize="18sp"
            android:layout_marginEnd="15dp" />


        <TextView
            android:id="@+id/status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/descricao"
            android:layout_marginEnd="9dp"
            android:layout_marginRight="9dp"
            android:text="Pedido Recebido"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp"
            android:id="@+id/entregar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/titulo"
            android:layout_alignStart="@+id/titulo"
            android:layout_below="@+id/titulo"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:layout_toLeftOf="@+id/status"
            android:layout_toStartOf="@+id/status"
            android:text="Pra entregar" />

        <TextView
            android:id="@+id/tempo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/status"
            android:layout_alignRight="@+id/status"
            android:layout_alignTop="@+id/titulo"
            android:text="HÃ¡ 5 minutos"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/descricao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/entregar"
            android:layout_alignLeft="@+id/entregar"
            android:layout_alignRight="@+id/entregar"
            android:layout_alignStart="@+id/entregar"
            android:layout_below="@+id/entregar"
            android:layout_marginBottom="15dp"
            android:text="Descricao"
            android:textSize="16sp" />
    </RelativeLayout>
</android.support.v7.widget.CardView>