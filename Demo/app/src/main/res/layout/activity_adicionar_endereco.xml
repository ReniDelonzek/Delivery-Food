<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="rd.com.demo.activity.AdicionarEndereco">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.CardView

            android:id="@+id/cardView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp">

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/textInputLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@id/spinner3"
                    android:layout_marginEnd="15dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="30dp"
                    android:visibility="gone">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/endereco"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Endereço"
                        android:inputType="textCapCharacters|textCapWords|textCapSentences" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/textInputLayout2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignEnd="@+id/textInputLayout"
                    android:layout_alignLeft="@+id/textInputLayout"
                    android:layout_alignRight="@+id/textInputLayout"
                    android:layout_alignStart="@+id/textInputLayout"
                    android:layout_below="@+id/textInputLayout4"
                    android:layout_marginTop="12dp"
                    android:visibility="gone">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/complemento"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Complemento"
                        android:inputType="textCapSentences" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/textInputLayout3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/textInputLayout2"
                    android:layout_alignStart="@+id/textInputLayout2"
                    android:layout_below="@+id/textInputLayout2"
                    android:layout_marginTop="16dp"
                    android:visibility="gone">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/numero"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:hint="Número"
                        android:inputType="number" />
                </android.support.design.widget.TextInputLayout>

                <CheckBox
                    android:id="@+id/checkBox3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/textInputLayout3"
                    android:layout_marginLeft="9dp"
                    android:layout_marginStart="9dp"
                    android:layout_marginTop="11dp"
                    android:layout_toEndOf="@+id/textInputLayout3"
                    android:layout_toRightOf="@+id/textInputLayout3"
                    android:text="S/N"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/button5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/textInputLayout3"
                    android:layout_alignStart="@+id/textInputLayout3"
                    android:layout_below="@+id/textInputLayout3"
                    android:layout_marginBottom="10dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="18dp"
                    android:background="@color/colorAccent"
                    android:text="Salvar"
                    android:textColor="#fff"
                    android:visibility="gone" />

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/textInputLayout4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignEnd="@+id/textInputLayout"
                    android:layout_alignLeft="@+id/textInputLayout"
                    android:layout_alignRight="@+id/textInputLayout"
                    android:layout_alignStart="@+id/textInputLayout"
                    android:layout_below="@+id/textInputLayout"
                    android:layout_marginTop="16dp"
                    android:visibility="gone">

                    <android.support.design.widget.TextInputEditText

                        android:id="@+id/bairro"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Bairro"
                        android:inputType="textCapWords|textCapSentences" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/l5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginEnd="15dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginStart="15dp">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/nome"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Quem recebe?"
                        android:inputType="textCapWords|textCapSentences"
                        android:maxLines="1" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/l6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignEnd="@+id/l5"
                    android:layout_alignLeft="@+id/l5"
                    android:layout_alignRight="@+id/l5"
                    android:layout_alignStart="@+id/l5"
                    android:layout_below="@+id/l5"
                    android:layout_marginTop="10dp">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/apelido"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Apelido(Ex: Casa, Trabalho, Namorada)"
                        android:inputType="textCapSentences" />
                </android.support.design.widget.TextInputLayout>

                <Button
                    android:padding="15dp"
                    android:id="@+id/button11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_below="@+id/l6"
                    android:layout_margin="15dp"
                    android:background="@color/colorAccent"
                    android:text="Definir Endereço"
                    android:textColor="#fff"
                    android:layout_alignParentRight="true" />

                <TextView

                    android:id="@+id/spinner2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignEnd="@+id/button11"
                    android:layout_alignLeft="@+id/textView13"
                    android:layout_alignRight="@+id/button11"
                    android:layout_alignStart="@+id/textView13"
                    android:layout_below="@+id/textView13"
                    android:text="Estado"
                    android:textSize="18sp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/textView13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/textView15"
                    android:layout_alignStart="@+id/textView15"
                    android:layout_below="@+id/button11"
                    android:text="Estado:"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/l6"
                    android:layout_alignStart="@id/l6"
                    android:layout_below="@+id/spinner2"
                    android:layout_marginTop="10dp"
                    android:text="Cidade"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/spinner3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignEnd="@id/l6"
                    android:layout_alignLeft="@+id/textView15"
                    android:layout_alignRight="@id/l6"
                    android:layout_alignStart="@+id/textView15"
                    android:layout_below="@+id/textView15"
                    android:text="Cidade"
                    android:textSize="18sp"
                    android:visibility="gone" />

            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <Button
            android:id="@+id/pular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/cardView"
            android:background="@color/transparent"
            android:text="Pular"
            android:textColor="@color/mb_blue" />

    </RelativeLayout>
</ScrollView>